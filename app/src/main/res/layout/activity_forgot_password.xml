<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout
    tools:context="com.example.prajw.hacknews.ForgotPassword"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.CardView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="false"
        app:cardElevation="16dp"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_centerInParent="true">


        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:background="@color/colorPrimary"
                android:id="@+id/linearLayout1">

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/logo"
                    android:padding="10dp"
                    android:tint="@color/white"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:textSize="24sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textColorHighlight="@color/orange"
                    android:text="HACKER NEWS"
                    android:fontFamily="sans-serif-medium"/>

            </LinearLayout>

            <ImageView
                android:layout_height="20dp"
                android:layout_width="20dp"
                android:layout_marginTop="-10dp"
                android:id="@+id/imageView1"
                android:src="@drawable/square"
                android:rotation="45"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/linearLayout1"/>


            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:id="@+id/relativeLayout1"
                android:layout_below="@+id/imageView1">

                <ImageView
                    android:layout_height="48dp"
                    android:layout_width="48dp"
                    android:background="@color/colorPrimary"
                    android:id="@+id/imageView_userIcon"
                    android:tint="@color/white"
                    android:src="@drawable/ic_mail_outline_black_24dp"
                    android:padding="4dp"/>

                <EditText
                    android:id="@+id/email"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:background="@color/grey"
                    android:textSize="16sp"
                    android:paddingLeft="16dp"
                    android:hint="Email"
                    android:layout_toRightOf="@+id/imageView_userIcon"
                    android:layout_alignParentTop="true"
                    android:layout_alignBottom="@+id/imageView_userIcon"/>

            </RelativeLayout>

            <Button
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:background="@color/orange"
                android:id="@+id/reset"
                android:textColor="@color/white"
                android:layout_marginTop="32dp"
                android:textSize="20sp"
                android:text=" RESET "
                android:fontFamily="sans-serif-medium"
                android:layout_below="@+id/relativeLayout1"/>

            <ImageView
                android:layout_height="2dp"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:id="@+id/imageView2"
                android:src="@drawable/dash"
                android:layout_below="@+id/reset"
                android:layerType="software"/>

            <TextView
                android:id="@+id/forgotToRegister"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:text="Dont have an account? Sign Up"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/imageView2"/>

            <TextView
                android:id="@+id/forgotToLogin"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                android:layout_marginBottom="10dp"
                android:text="Back To Login"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>